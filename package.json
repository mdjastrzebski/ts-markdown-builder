{
  "name": "ts-markdown-builder",
  "version": "0.3.0",
  "description": "Elegant markdown builder with minimal bundle size.",
  "main": "dist/commonjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "!**/__tests__",
    "!**/.*"
  ],
  "exports": {
    ".": {
      "require": "./dist/commonjs/index.js",
      "import": "./dist/esm/index.mjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli dist",
    "build": "yarn clean && yarn build:commonjs && yarn build:esm && yarn build:types",
    "build:commonjs": "BABEL_ENV=cjs babel src --out-dir \"dist/commonjs\" --extensions .js,.ts --out-file-extension .js --source-maps --no-comments",
    "build:esm": "BABEL_ENV=esm babel src --out-dir \"dist/esm\" --extensions .js,.ts --out-file-extension .mjs  --source-maps --no-comments",
    "build:types": "tsc --project tsconfig.release.json --outDir \"dist/types\"",
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta"
  },
  "keywords": [
    "markdown",
    "typescript"
  ],
  "repository": "https://github.com/mdjastrzebski/ts-markdown-builder",
  "author": "Maciej Jastrzebski <mdjastrzebski@gmail.com> (https://github.com/mdjastrzebski)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdjastrzebski/ts-markdown-builder/issues"
  },
  "homepage": "https://github.com/mdjastrzebski/ts-markdown-builder#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/plugin-syntax-flow": "^7.24.7",
    "@babel/plugin-transform-react-jsx": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@callstack/eslint-config": "^15.0.0",
    "@release-it/conventional-changelog": "^9.0.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/jest": "^29.5.12",
    "babel-plugin-add-import-extension": "^1.6.0",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "release-it": "^17.10.0",
    "typescript": "^5.5.4"
  },
  "packageManager": "yarn@4.4.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "yarn typecheck",
        "yarn test",
        "yarn lint"
      ],
      "after:bump": "yarn build",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version} (${date:yyyy-MM-dd})"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@callstack/eslint-config/node",
      "prettier"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "all",
          "useTabs": false
        }
      ],
      "sort-imports": [
        "error",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": true
        }
      ],
      "import/order": "error"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/",
    "coverage/",
    "website/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "size-limit": [
    {
      "path": "./dist/esm/index.mjs",
      "limit": "1 kB"
    }
  ]
}
